        <activity android:name=".MonitoreaProgresoGraficas" />
        <activity android:name=".MonitoreaProceso" />
        <activity android:name=".Horario" android:theme="@style/noToolBar" android:screenOrientation="portrait"/>
        <activity android:name=".Objetivo" android:theme="@style/noToolBar" android:screenOrientation="portrait"/>

        <activity
            android:name=".PaginaInicial"
            android:screenOrientation="portrait"
